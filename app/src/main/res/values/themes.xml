<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Koala" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/koala_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/koala_black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnError">@color/koala_yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/koala_black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Koala.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KOALA_ANDROID.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KOALA_ANDROID.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Koala.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Koala.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Koala.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>