        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Koala.NoActionBar">
        <activity
            android:name=".ui.findpassword.FindPasswordActivity"
            android:exported="false" />
        <activity
